# Neo4j Configuration (Docker dev)
# These values should match docker-compose.yml
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=change-me

# OpenAI / LLM
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-key-here

# Optional: server-side VAD (Silero)
# By default, the voice streaming pipeline uses energy VAD. To enable Silero VAD,
# provide a local Silero VAD torchscript model and set `engine: "silero"` in the client.
SILERO_VAD_MODEL_PATH=

# Notion API (optional, for Notion integration)
# Get your integration token from https://www.notion.so/my-integrations
NOTION_API_KEY=your-notion-integration-token-here

# Notion Database IDs for auto-sync (OPTIONAL - leave empty to sync ALL databases and pages)
# If empty, the system will automatically discover and sync all databases and standalone pages
# If specified, only syncs pages from these databases (comma-separated)
# Find database IDs in the Notion database URL: notion.so/workspace/DATABASE_ID
NOTION_DATABASE_IDS=

# Enable Notion auto-sync background loop (dev-only)
# Set to "true" to enable automatic syncing every 60 seconds
ENABLE_NOTION_AUTO_SYNC=false

# Backend API base URL (optional, defaults to http://127.0.0.1:8000)
BRAINWEB_API_BASE=http://127.0.0.1:8000

# Frontend API URL (for Next.js)
# Create frontend/.env.local with:
# NEXT_PUBLIC_API_URL=http://127.0.0.1:8000
# OPENAI_API_KEY=your-openai-key-here

# ----------------------------
# Sentry (optional, frontend/backend error monitoring)
# ----------------------------
# Frontend browser DSN (Next.js client)
NEXT_PUBLIC_SENTRY_DSN=
# Frontend server/edge DSN (optional; falls back to SENTRY_DSN)
SENTRY_DSN=
SENTRY_DSN_BACKEND=
SENTRY_DSN_FRONTEND_SERVER=
SENTRY_DSN_FRONTEND_EDGE=
SENTRY_ENVIRONMENT=development
# Keep low initially (examples)
SENTRY_TRACES_SAMPLE_RATE=0.0
SENTRY_PROFILES_SAMPLE_RATE=0.0
NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0.0
NEXT_PUBLIC_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.0
NEXT_PUBLIC_SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=0.0
# Optional release/version tagging
RELEASE=
GIT_SHA=
