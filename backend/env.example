# Copy to your own private env file (do NOT commit secrets):
# - repo-root: .env.local   (preferred)
# - or backend/.env

# ----------------------------
# Local development (docker-compose)
# ----------------------------
NEO4J_USER=neo4j
NEO4J_PASSWORD=change-me
NEO4J_URI=bolt://localhost:7687

BRAINWEB_API_BASE=http://127.0.0.1:8000

# Disable private integrations by default
NOTION_API_KEY=
NOTION_DATABASE_IDS=
ENABLE_NOTION_AUTO_SYNC=false

# ----------------------------
# Demo mode (production demo)
# ----------------------------
NODE_ENV=production
DEMO_MODE=true
DEMO_ALLOW_WRITES=false
DEMO_TENANT_ID=demo
DEMO_GRAPH_ID=demo
DEMO_SAFE_WRITE_PATHS=/ai/chat,/ai/semantic-search
DEMO_RATE_LIMIT_PER_IP_PER_MIN=120
DEMO_RATE_LIMIT_PER_SESSION_PER_MIN=60
DEMO_BEDROCK_MAX_TOKENS_PER_SESSION=4000

AWS_REGION=us-east-1


