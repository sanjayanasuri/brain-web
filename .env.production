# Production Environment Configuration for Hetzner
# Copy this to .env and fill in your values

# ============================================
# Neo4j Configuration
# ============================================
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=CHANGE_ME_GENERATE_STRONG_PASSWORD
NEO4J_DATABASE=neo4j

# ============================================
# PostgreSQL Configuration
# ============================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=brainweb
POSTGRES_USER=brainweb
POSTGRES_PASSWORD=CHANGE_ME_GENERATE_STRONG_PASSWORD
EVENTS_POSTGRES=true

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
USE_REDIS=true

# ============================================
# Qdrant Configuration
# ============================================
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION=concepts
USE_QDRANT=true

# ============================================
# OpenAI / LLM Configuration
# ============================================
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE

# Optional: Silero VAD for voice streaming
SILERO_VAD_MODEL_PATH=

# ============================================
# Notion Integration (Optional)
# ============================================
NOTION_API_KEY=YOUR_NOTION_API_KEY_HERE
NOTION_DATABASE_IDS=
ENABLE_NOTION_AUTO_SYNC=false

# ============================================
# Backend Configuration
# ============================================
NODE_ENV=production
PORT=8000
BRAINWEB_API_BASE=http://localhost:8000

# Storage backend (local or s3)
STORAGE_BACKEND=local

# API security
API_TOKEN_SECRET=CHANGE_ME_GENERATE_WITH_openssl_rand_hex_32

# Demo mode (set to false for production)
DEMO_MODE=false

# ============================================
# Frontend Configuration (if self-hosting)
# ============================================
NEXT_PUBLIC_API_URL=https://demo.sanjayanasuri.com/api

# ============================================
# NextAuth Configuration (REQUIRED for Vercel)
# ============================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=CHANGE_ME_GENERATE_WITH_openssl_rand_base64_32
NEXTAUTH_URL=https://demo.sanjayanasuri.com

# ============================================
# Optional: External Services
# ============================================
# AWS S3 (if using S3 storage)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=
# S3_BUCKET=

# Sentry (error tracking)
# SENTRY_DSN=

# ============================================
# Generate Strong Passwords
# ============================================
# Use these commands to generate secure passwords:
#   openssl rand -base64 32
#   openssl rand -hex 32
